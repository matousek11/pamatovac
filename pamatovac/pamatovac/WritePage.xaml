<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pamatovac.WritePage"
             BackgroundColor="#2b2d42">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Pamatovač" FontSize="52" TextColor="#edf2f4" HorizontalTextAlignment="Center"/>
            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <Label Text="Zadejte jméno:" FontSize="15" TextColor="#8d99ae" HorizontalTextAlignment="Start" Margin="0, 0, 0, 0"/>
                <Frame Padding="0" CornerRadius="3">
                    <Entry x:Name="nameEntry" Placeholder="Jméno" TextColor="#2b2d42" BackgroundColor="#edf2f4" TextChanged="Name_TextChanged"/>
                </Frame>
                <Button Text="Uložit" BackgroundColor="#8d99ae" TextColor="#edf2f4" VerticalOptions="EndAndExpand" WidthRequest="200" CornerRadius="30" Margin="0, 20, 0, 0" Clicked="Save_Button_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>